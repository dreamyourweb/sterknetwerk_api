<h1>Listing indicators</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Example</th>
    <th>Score</th>
    <th>Aspect</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @indicators.each do |indicator| %>
  <tr>
    <td><%= indicator.title %></td>
    <td><%= indicator.description %></td>
    <td><%= indicator.example %></td>
    <td><%= indicator.score %></td>
    <td><%= indicator.aspect_id %></td>
    <td><%= link_to 'Show', indicator %></td>
    <td><%= link_to 'Edit', edit_indicator_path(indicator) %></td>
    <td><%= link_to 'Destroy', indicator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

